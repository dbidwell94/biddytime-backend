{
  "name": "biddytime-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier . --write && git add .",
    "build": "webpack --progress",
    "dev": "knex migrate:up && webpack --mode=development --watch",
    "up": "sudo docker-compose -f ./docker-compose-dev.yaml up --build",
    "up:d": "sudo docker-compose -f ./docker-compose-dev.yaml up --build -d",
    "up:prod": "yarn build && sudo docker-compose up --build",
    "down": "docker-compose -f ./docker-compose-dev.yaml down --remove-orphans",
    "prod:start": "knex migrate:up && node ./index.js"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 120,
    "quoteProps": "consistent",
    "singleQuote": false
  },
  "dependencies": {
    "@koa/router": "^10.0.0",
    "@types/node": "^14.14.41",
    "bcrypt": "^5.0.1",
    "dotenv": "^8.2.0",
    "http-status": "^1.5.0",
    "knex": "^0.95.4",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "module-alias": "^2.2.2",
    "pg": "^8.6.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@types/bcrypt": "^3.0.1",
    "@types/glob": "^7.1.3",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa__router": "^8.0.4",
    "@types/webpack-node-externals": "^2.5.1",
    "glob": "^7.1.6",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "nodemon-webpack-plugin": "^4.5.2",
    "prettier": "^2.2.1",
    "ts-loader": "^9.0.2",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "webpack": "^5.35.0",
    "webpack-cli": "^4.6.0",
    "webpack-node-externals": "^3.0.0"
  }
}
