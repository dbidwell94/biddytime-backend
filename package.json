{
  "name": "biddytime-backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier . --write && git add .",
    "build": "webpack",
    "dev": "knex migrate:up && nodemon src/index.ts",
    "up": "sudo docker-compose -f ./docker-compose-dev.yaml up --build",
    "up:d": "sudo docker-compose -f ./docker-compose-dev.yaml up --build -d",
    "down": "docker-compose -f ./docker-compose-dev.yaml down --remove-orphans",
    "knex": "knex"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 120,
    "quoteProps": "consistent",
    "singleQuote": false
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "http-status": "^1.5.0",
    "knex": "^0.95.4",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "pg": "^8.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@types/koa": "^2.13.1",
    "@types/koa-router": "^7.4.2",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-loader": "^9.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.35.0",
    "webpack-cli": "^4.6.0"
  }
}
